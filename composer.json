{
    "name": "linasram/ecs-gitlab-format",
    "description": "GitLab output formatter for easy-coding-standard.",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "static analysis",
        "code style"
    ],
    "authors": [
        {
            "name": "Linas Ramanauskas",
            "email": "linas.ramanauskas95@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "symplify/easy-coding-standard": ">=10.1"
    },
    "require-dev": {
        "dg/bypass-finals": "^1.6",
        "phpstan/phpstan": "^1.11",
        "phpunit/phpunit": "^9.6"
    },
    "autoload": {
        "psr-4": {
            "LinasRam\\EcsGitlabFormat\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LinasRam\\EcsGitlabFormat\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "cs-check": "ecs ",
        "cs-fix": "ecs --fix",
        "analyze": "phpstan",
        "phpunit": "phpunit"
    },
    "config": {
        "sort-packages": true
    }
}
